{
  "name": "indra",
  "version": "0.1.0",
  "type": "module",
  "description": "Local multi-agent AI assistant (CLI + Web UI hybrid)",
  "main": "dist/index.js",
  "bin": {
    "indra": "dist/cli/entry.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "oxlint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "cli": "node --env-file=.env dist/cli/entry.js",
    "gateway": "node --env-file=.env dist/gateway/entry.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.5.13",
    "oxlint": "^1.41.0",
    "prettier": "^3.8.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.6",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.19",
    "@clack/prompts": "^0.8.2",
    "@types/jsonwebtoken": "^9.0.10",
    "agent-browser": "^0.8.0",
    "better-sqlite3": "^11.8.1",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "hono": "^4.6.15",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^4.2.1",
    "openai": "^6.16.0",
    "proper-lockfile": "^4.1.2",
    "twitter-api-v2": "^1.29.0",
    "ws": "^8.18.0",
    "zod": "^3.24.1"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
  }
}
